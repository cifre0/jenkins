pipeline{
     agent any
     environment {
            DOCKERHUB_CREDENTIALS=credentials('ID') // ID Identifiants globaux cr√©er dans Jenkins
      }
      stages {
            stage('git clone') {
                 steps {
                      git branch: 'main', url: 'https://github.com/user/project/'
                    }
                 }
              stage('build') {
                      steps {
                         sh 'docker build -t  usernamedockerhub/nomdeapp:tag . '
                    }
                 }
             stage('login') {
                      steps {
                         sh 'echo $DOCKERHUB_CREDENTIALS_PSW  | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    }
                 }
            stage('push') {
                 steps {
                      sh 'docker push usernamedockerhub/nomdeapp:tag'
                    }
                  }
                }
     
            post {
                always {
                      sh 'docker logout'
                   }
                 }
}
